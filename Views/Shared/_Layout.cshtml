<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/node_modules/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Header", false)
    <title>@ViewData["Title"] - NetCoreSample</title>
    
</head>
<body>
    <!-- Reference https://bootstrapious.com/p/bootstrap-sidebar -->
    <div class="wrapper">
        @{
            @await Component.InvokeAsync("SideBar", Context)
        }
        <!-- Page Content Holder -->
        <div id="content" class="container body-content">
            <!-- NavBar -->
            @await Component.InvokeAsync("NavBar", Context)

            <br>
            <div id="_ErrorFlashMessage">
                @await Html.PartialAsync("../Partial/_ErrorFlashMessage.cshtml")
            </div>

            @RenderBody()
            <hr />
            <footer>
                <p>&copy; 2017 - NetCoreSample</p>
            </footer>
        </div>
    </div>
    <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="~/node_modules/jquery-serializejson/jquery.serializejson.min.js"></script>
    <script src="~/node_modules/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/node_modules/highlight.js/lib/highlight.js"></script>
    <script src="~/node_modules/highlightjs-line-numbers.js/dist/highlightjs-line-numbers.min.js"></script>
    <script src="~/js/site.js"></script>
    <script type="module" src="~/js/tool.js"></script>
    <script src="https://kit.fontawesome.com/2b7ec31136.js" crossorigin="anonymous"></script>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-160274425-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'UA-160274425-1');
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
