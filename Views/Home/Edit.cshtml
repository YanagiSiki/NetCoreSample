@model NetCoreSample.Models.Post

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Header{
    <link rel="stylesheet" href="~/lib/simplemde/dist/simplemde.min.css">
    <link rel="stylesheet" href="~/css/typeaheadjs.css" >
    <link rel="stylesheet" href="~/lib/highlight-js/src/styles/github.css">
    <link rel="stylesheet" href="~/css/markdown-custom.css" />
    <link rel="stylesheet" href="~/lib/github-markdown-css/github-markdown.css" />
}
<br>
<div class="row">
    <div class="col-md-12" id="_Breadcrumb">
        <!-- 麵包屑導覽 -->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Post" asp-route-postId="@Model.PostId">Post</a></li>
                <li class="breadcrumb-item active"><a>Edit - @Model.PostId</a></li>
            </ol>
        </nav>
    </div>

    <div class="col-md-12">
        <h2>Edit</h2>
        <hr />
    </div>
    
    <div class="col-md-12">
        <form asp-action="Edit" method="post" id="form">
            <input asp-for="PostId" type="hidden">
            <input asp-for="UserId" type="hidden">
            <div class="form-group">
                <input class="form-control" placeholder="Enter PostTitle" asp-for="PostTitle">
            </div>
            <textarea asp-for="PostContent" ></textarea>
            <br>
            <div class="form-group" id="js-alltags">
                <div id="bloodhound">
                    <input class="typeahead form-control" type="text" placeholder="input something">
                    <button type="button" class="btn btn-outline-success">Add Tag</button>
                </div>
            </div>
            <div class="form-group" id="js-tags">
                <span>Tags：</span>
            </div>
            <div class="form-group">
                <!-- <input type="submit"  value="Submit"  class="btn btn-outline-primary float-right" /> -->
                <input type="button" id="submitbtn" value="Submit" class="btn btn-outline-primary float-right" />
            </div>
        </form>
    </div>
</div>

@section Scripts{    
    <script src="~/lib/simplemde/dist/simplemde.min.js"></script>
    <script src="~/lib/typeahead.js/dist/typeahead.jquery.min.js"></script>
    <script src="~/js/edit.js"></script>
    <!-- <script src="~/lib/highlight-js/src/highlight.js"></script> -->
    <script src="https://cdn.jsdelivr.net/highlight.js/latest/highlight.min.js"></script>
    <script src="~/lib/highlightjs-line-numbers.js/src/highlightjs-line-numbers.js"></script>
    <script>hljs.initHighlightingOnLoad();</script>
    <script>hljs.initLineNumbersOnLoad();</script>
    
}


