@model NetCoreSample.Models.User

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br>
<div class="row">
    <div class="col-md-12">
        <h2>Login</h2>
        <hr />
    </div>
    <div class="col-md-8">

    </div>
    <div class="col-md-4">
        <form id="form">
            <input id="returnUrl" type="hidden" value="@ViewBag.ReturnUrl">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input class="form-control" placeholder="Enter Name" asp-for="Name">
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" class="form-control" asp-for="Password">
            </div>
            <div class="form-group">
                <input type="button" id="submitbtn" value="Submit" class="btn btn-outline-primary" />
            </div>
        </form>
    </div>
</div>

